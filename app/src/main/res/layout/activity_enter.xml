<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".enter"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Данные по машине"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="10pt"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="3pt">

        <TextView
            android:text="Марка машины"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="5pt"
            android:layout_width="match_parent"
            android:gravity="left">
        </TextView>
        <EditText
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5pt"
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:hint="Lada Vesta">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="3pt">

        <TextView
            android:text="Год выпуска"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="5pt"
            android:layout_width="match_parent"
            android:gravity="left">
        </TextView>
        <EditText
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5pt"
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:hint="2020">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="3pt">

        <TextView
            android:text="Номер машины"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="5pt"
            android:layout_width="match_parent"
            android:gravity="left">
        </TextView>
        <EditText
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5pt"
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:hint="A777AA777">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="3pt">

        <TextView
            android:text="VIN номер"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="5pt"
            android:layout_width="match_parent"
            android:gravity="left">
        </TextView>
        <EditText
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5pt"
            android:id="@+id/vin"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:hint="AAAAA000000000000"
            android:textSize="6pt">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="3pt">

        <TextView
            android:text="Объем двигателя"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="5pt"
            android:layout_width="match_parent"
            android:gravity="left">
        </TextView>
        <EditText
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5pt"
            android:id="@+id/engine"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:hint="1.6">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_marginTop="3pt">

        <TextView
            android:text="КПП"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="5pt"
            android:layout_width="match_parent"
            android:gravity="left">
        </TextView>
        <EditText
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5pt"
            android:id="@+id/transmission"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:hint="МКПП">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/stat"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:onClick="save"
            android:text="Сохранить"
            android:textColor="#000000">
        </Button>
    </LinearLayout>
</LinearLayout>
